<project>

    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac srcdir="src" destdir="build/classes"/>
    </target>

	<target name="test">
        <junit printsummary="yes" fork="yes" haltonfailure="yes">
			<formatter type="plain"/>
			<test name="*Test"/>
		</junit>
    </target>
	
    <target name="jar">
        <mkdir dir="build/jar"/>
        <jar destfile="build/jar/MyTestJavaProject.jar" basedir="build/classes">
            <manifest>
                <attribute name="Main-Class" value="Main"/>
            </manifest>
        </jar>
    </target>

    <target name="run">
        <java jar="build/jar/MyTestJavaProject.jar" fork="true"/>
    </target>

</project>